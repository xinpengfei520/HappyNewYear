    <!--帧布局-->
    <FrameLayout
        android:id="@+id/fl_main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#11000000"
        android:padding="5dp" />

    <!--RadioGroup-->
    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_searchsecret"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/search22"
            android:gravity="center"
            android:text="挖掘秘密"
            android:textColor="@drawable/bottom_textcolor"
            android:textSize="10sp"
           />


        <RadioButton
            android:id="@+id/rb_youinmyeye"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/youinmyeye22"
            android:gravity="center"
            android:text="眼中的你"
            android:textColor="@drawable/bottom_textcolor"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_waitresult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/waitresult22"
            android:gravity="center"
            android:text="辗转反侧"
            android:textColor="@drawable/bottom_textcolor"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_iwanttosay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@android:color/transparent"
            android:drawableTop="@drawable/iwanttosay22"
            android:gravity="center"
            android:text="寤寐求之"
            android:textColor="@drawable/bottom_textcolor"
            android:textSize="10sp" />

