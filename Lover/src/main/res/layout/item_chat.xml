<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal">

        <com.example.guoqinghomework.view.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/person_left" />

        <TextView
            android:id="@+id/mes_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/chat_bg_left"
            android:gravity="center_vertical"
            android:maxWidth="250dp"
            android:text="kkkkkkdkdkdkklslslsl"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mes_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/chart_bg_right"
            android:gravity="center_vertical"
            android:maxWidth="250dp"
            android:text="hello"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <com.example.guoqinghomework.view.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/person_right" />

    </LinearLayout>

</LinearLayout>
